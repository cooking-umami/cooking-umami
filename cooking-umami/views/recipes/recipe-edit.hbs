        <label for="lunch">Lunch</label><br>
     <input type="checkbox" id="dinner" name="dish-type" value="dinner">
        <label for="dinner">Dinner</label>
     <input type="checkbox" id="dessert" name="dish-type" value="dessert">
        <label for="dessert">Dessert</label><br>
     <input type="checkbox" id="drink" name="dish-type" value="drink">
        <label for="drink">Drink</label>
     <input type="checkbox" id="othera" name="dish-type" value="other">
