<h2>Edit the recipe: {{title}}</h2>

<form action="/create" method="POST">
  <label>
    Title:
    <input type="text" name="title" value="{{title}}" />
  </label>
  <br>
    <label>
    User:
    <input type="text" name="user" value="{{user}}" />
  </label>
  <label>
    Difficulty Level:
