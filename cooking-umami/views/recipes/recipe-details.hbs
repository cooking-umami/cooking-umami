<section class="recipe-details container rounded">
  
  <h2 class="pb-3 pt-3">{{title}}</h2>
   <img src="{{image}}" alt="{{title}}" class="img-fluid rounded mx-auto d-block"> 
  <div class="row recipe-info rounded">
  <div class="col"><p>
   <strong><big>Created by:</big></strong>
    {{creator.userName}}
    <br />
  </p>
  <p>
    <strong><big>Duration:</big></strong>
    {{duration}} minutes
  </p>
  </div>
  <div class="col">
  <p>
   <strong><big>Difficulty:</big></strong>
    {{difficulty}}
  </p>
  <p>
    <strong><big>Dish Type:</big></strong>
    {{dishType}}
  </p>
  </div>
  </div>
  <div class="row">
  <p>
    <strong><big>Description:</big></strong><br>
    {{description}}
  </p>
  <div class="col-8">

   <p>
    <strong><big>Instructions:</big></strong><br>
    {{instructions}}
  </p>
  </div>
  <div class="col-4 recipe-info rounded">
  <p>
    <strong><big>Ingredients:</big></strong><br>
    {{ingredients}}
  </p>
  </div>
  </div>

  <div class="row pt-2">
    <div class="col-4 text-center">
       <a class="btn btn-primary" href="/recipes">Back</a>
    </div>
    <div class="col-4 text-center">
   <a class="btn btn-primary" href="/recipes/{{this._id}}/edit">Edit</a>
   </div>
    <div class="col-4 text-center">
    <form action="/recipes/{{this._id}}/delete" method="POST">
    <button class="btn btn-danger">Delete</button>
    </div>
  </div>
</section>